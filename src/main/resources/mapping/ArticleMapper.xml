<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.ArticleDao">

    <select id="getFirst10Article" resultType="com.student.model.Article">
        SELECT
          a.*,c.name
        FROM
          article a,category c
        WHERE
          a.categoryId = c.id
        LIMIT 10
    </select>

    <resultMap id="categoryType" type="com.student.model.Category">
        <result property="displayName" column="display_name" />
    </resultMap>

    <select id="getCategories" resultMap="categoryType">
        SELECT * FROM category
    </select>

    <select id="getArticleById" resultType="com.student.model.Article">
        SELECT * FROM article WHERE id = #{id}
    </select>

    <select id="getCategoryById" parameterType="long" resultMap="categoryType">
        SELECT * FROM category WHERE id = #{id}
    </select>

    <select id="getCategoryIdByName" parameterType="string" resultType="long">
        SELECT id FROM category WHERE name=#{name}
    </select>

    <select id="getArticlesByCategoryName" parameterType="long" resultType="com.student.model.Article">
        SELECT
          a.*,
          c.name as category
        FROM
          article a,category c
        WHERE
          a.categoryId=c.id
        AND
          categoryId=#{categoryId}
    </select>


    <insert id="writeBlog" parameterType="com.student.model.Article">
        INSERT INTO
          article
        (
          title,content,categoryId,summary,date
        )
        VALUES
        (
          #{title},
          #{content},
          #{categoryId},
          #{summary},
          #{date}
        )
    </insert>

    <update id="updateArticleById" parameterType="com.student.model.Article">
        UPDATE
          article
        SET
          title=#{title},
          content=#{content},
          summary=#{summary},
          date=#{date}
        WHERE
          id=#{id}
    </update>


    <delete id="deleteArticleById" parameterType="long">
        DELETE FROM article WHERE id=#{id}
    </delete>


    <select id="findArticleByTitle" resultType="com.student.model.Article">
        SELECT * FROM article WHERE title LIKE "%"#{keyword}"%"
    </select>


</mapper>